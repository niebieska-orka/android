            android:layout_height="wrap_content" app:srcCompat="@drawable/unicorn" tools:layout_editor_absoluteY="248dp"
            tools:layout_editor_absoluteX="103dp" android:id="@+id/imageView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="442dp" tools:layout_editor_absoluteX="98dp" android:id="@+id/editText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="496dp" tools:layout_editor_absoluteX="99dp" android:id="@+id/editText2"/>
    <TextView
            android:text="@string/no_account_yet"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="656dp"
            tools:layout_editor_absoluteX="154dp" android:id="@+id/textView2"/>
</android.support.constraint.ConstraintLayout>