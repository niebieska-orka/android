<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.composer.MainActivity">
    <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="755dp"/>

    <Button
            android:text="OczekujÄ…ce rezerwacje"
            android:textColor="#ffffff"
            app:backgroundTint="#1f2555" android:layout_width="120dp"
            android:layout_height="70dp"
            android:id="@+id/pending_button" android:layout_marginTop="580dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Skanuj"
            android:layout_width="120dp"
            android:textColor="#ffffff"
            app:backgroundTint="#20a6a8"
            android:layout_height="70dp"
            android:id="@+id/qr_button" android:layout_marginTop="580dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/pending_button"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Moje rezerwacje"
            android:textColor="#ffffff"
            app:backgroundTint="#1f2555"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:id="@+id/reservations_button" android:layout_marginTop="580dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/qr_button"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>